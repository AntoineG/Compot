{% extends '::admin.html.twig' %}

{% block content %}

	<h1>Phrase</h1>

	<table class="record_properties">
	    <tbody>
	        <tr>
	            <th>Id</th>                <td>{{ entity.id }}</td>        
			</tr>
	
	        <tr>
	            <th>Content</th>                <td>{{ entity.content }}</td>        
			</tr>
			
			<tr>
	            <th>Tags</th> 
	               
					<td>
						{% for tag in entity.tags %}
							{{ tag.content }}<br />
						{% endfor %}
					</td>        
			</tr>
			
			<tr>
	            <th>Random Tags</th> 
	               
					<td>
						<ul>
						{% for tag in entity.tags %}
							<li><b>{{ tag.content }}</b> ({{ tag.randoms|length }})</li>
							<li><ul>
								{% for random in tag.randoms %}
									<li>{{ random.content }}</li>
								{% endfor %}
							</ul></li>
							<br />
						{% endfor %}
						</ul>
					</td>        
			</tr>
	    </tbody>
	</table>

	<ul class="record_actions">
	    <li>
	        <a href="{{ path('admin_phrase') }}">
	            Back to the list
	        </a>
	    </li>
	    <li>
	        <a href="{{ path('admin_phrase_edit', { 'id': entity.id }) }}">
	            Edit
	        </a>
	    </li>
	    <li>
	        <form action="{{ path('admin_phrase_delete', { 'id': entity.id }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">Delete</button>
	        </form>
	    </li>
	</ul>

{% endblock %}

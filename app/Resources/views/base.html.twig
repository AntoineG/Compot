<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Compot{% endblock %}</title>

        {% block stylesheets %}
		        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('assets/css/main.css') }}" />
		{% endblock %}
		
		{% block scripts %}
			<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.3/jquery.min.js"></script>
			<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js"></script>
			
			<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/routing.js') }}"></script>
			<script type="text/javascript" src="{{ path('fos_js_routing_js') }}"></script>
			
			<script type="text/javascript" src="{{ asset('assets/js/init.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/eventListener.js') }}"></script>
		{% endblock %}
		
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}

		<div id="global-container">
			
			<div id="header">
				<div id="header-content">
				{% block header %}
	                {% include 'CmtCoreBundle:Block:header.html.twig' %}
				{% endblock %}
				</div>
			</div>
			
			<div id="top-menu">
			{% block topmenu %}
	        	{% include 'CmtCoreBundle:Block:top-menu.html.twig' %}
			{% endblock %}
			</div>
			<div id="top-menu-bar"></div>
			
			
			<div id="content-container">
			
				<div id="content">
					<div id="right-border"></div>
					{% block content %}{% endblock %}
				</div>	
					<div id="side-content">
						{% block sidecontent %}{% endblock %}
					</div>
			</div>
			
		</div>
		
		<div id="footer">
		{% block footer %}
        	{% include 'CmtCoreBundle:Block:footer.html.twig' %}
		{% endblock %}
		</div>
		
		{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
